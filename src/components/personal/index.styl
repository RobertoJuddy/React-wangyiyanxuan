@import '../../assets/stylus/mixins.styl'
.Personal
  width 7.5rem
  height 100%
  .PersonalHeader
    width 7.5rem
    height 2.7rem
    background #C0A368
    position relative
    z-index 4
    .PersonalHeaderLeft
      width 5.1rem
      height 1.41rem
      display flex
      align-items center
      justify-content space-around
      position absolute
      top 0
      bottom 0
      margin auto 0
      img
        width 1.41rem
        height 1.41rem
        border-radius 50%
      .userInfo
        width 3.38rem
        height 0.79rem
        display flex
        flex-direction column
        .phone
          width 3.38rem
          height 0.43rem
          font-size 0.18rem
          color white
        .normal
          width 1.11rem
          height 0.31rem
          font-size 0.18rem
          color white
    .PersonalHeaderRight
      width 2.1rem
      height 2.7rem
      position: absolute
      right 0
      .icon-erweima
        width 0.63rem
        height 0.63rem
        font-size .4rem
        position: absolute
        right: 0
        top: 0.3rem
      .VIP
        width 2.03rem
        height 0.84rem
        background #444444
        border-top-left-radius: .85333rem;
        border-bottom-left-radius: .85333rem;
        position absolute
        top 1rem
        .icon-lightningbshandian
          font-size 0.5rem
          position absolute
          left 0
          top 0.15rem
        .SuperVIP
          width 1.34rem
          height 0.82rem
          background #444444
          display flex
          flex-direction column
          justify-content center
          position absolute
          right: 0
          top: 0
          .SuperVIPText
            widht 10.4rem
            height 0.36rem
            font-size 0.14rem
            color #EDE7DB
          .Immediately
            width 1.34rem
            height 0.27rem
            display flex
            .ImmediatelyText
              width 1rem
              height 0.22rem
              color #EDE7DB
              font-size 0.14rem
            .icon-right-circle
              font-size 0.12rem
  .BScrollPersonal
    height 9.5rem
    display flex
    .PersonalContent
      height 10.35rem
      margin-top -0.5rem
      .PersonalList
        widht 7.5rem
        height 9.4rem
        li
          width 2.49rem
          height 1.81rem
          float left
          display flex
          flex-direction column
          justify-content space-around
          align-items center
          .iconfontMain
            width 0.5rem
            height 0.5rem
            .iconfont
              font-size 0.7rem
              width 0.5rem
              height 0.5rem
              margin-left -0.11rem
          .PersonalText
            width 2.48rem
