            text-align: center



      .PersonalMainPhone
        width 6.72rem
        height 0.95rem
        background #B4282D
        display flex
        justify-content center
        align-items center
        position relative
        margin-left 0.4rem
        .PhoneLogin
          font-size 0.2rem
          color white
          text-align center
        .PhoneIcon
          width 0.39rem
          height 0.39rem
          position absolute
          left 2.3rem
          top -0.25rem
          z-index 5


